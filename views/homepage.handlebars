{{#each projects as |project| }}
<div class="row align-center mb-5">
  <a href="/projects/{{id}}">
    <div class="col-md-6">
      <h2>{{project.name}}</h2>
    </div>
    <div class="col-md-6">
      <h3>{{project.description}}</h3>
      <h3>{{project.needed_funding}}</h3>
    </div>
  </a>
</div>
{{/each}}